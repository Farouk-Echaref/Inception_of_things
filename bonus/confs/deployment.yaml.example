apiVersion: apps/v1
kind: Deployment
metadata:
  name: my-deployment
  labels:
    app: my-app
    type: p3


spec:
  replicas: 1
  selector:
    matchLabels:
      app: my-app
      type: my-pod

  template:
    metadata:
      name: my-pod
      labels:
        app: my-app
        type: my-pod
    spec:
      containers:
      - name: pod-name
        image: wil42/playground:v1
        ports:
        - containerPort: 8888


---
apiVersion: v1
kind: Service
metadata:
  name: my-service
  labels:
    app: my-app
    type: p3


spec:
  type: NodePort
  ports: 
  - port: 3000
    nodePort: 30003
    targetPort: 8888
  selector:
    app: my-app
    type: my-pod